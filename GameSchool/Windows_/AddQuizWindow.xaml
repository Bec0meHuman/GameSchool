<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="GameSchool.Windows_.AddQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание вопроса" 
        Height="1050" 
        Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Background="#0A0F1F"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Основные цвета -->
        <Color x:Key="PrimaryColor">#0A0F1F</Color>
        <Color x:Key="SecondaryColor">#141B2D</Color>
        <Color x:Key="AccentColor">#00E5FF</Color>
        <Color x:Key="TextColor">#E0E6ED</Color>
        <Color x:Key="BorderColor">#1A2337</Color>

        <!-- Кисти -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

        <!-- Градиенты -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A0F1F" Offset="0"/>
            <GradientStop Color="#141B2D" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00E5FF" Offset="0"/>
            <GradientStop Color="#2979FF" Offset="1"/>
        </LinearGradientBrush>

        <!-- Стиль для декоративных элементов -->
        <Style x:Key="DecorationBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" 
                                    ShadowDepth="0" 
                                    Color="{StaticResource AccentColor}"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Background" Value="#1A2337"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D3047"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#202942"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="MainBorder"
                                    Background="{StaticResource SecondaryBrush}"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    BorderThickness="1.5"
                                    CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" 
                                                    ShadowDepth="5" 
                                                    Color="#000000" 
                                                    Opacity="0.5"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="GlowBorder"
                                    Background="{StaticResource AccentGradient}"
                                    CornerRadius="8"
                                    Opacity="0"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0.2" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для шестиугольников -->
        <Style x:Key="HexagonBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Opacity" Value="0.2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" 
                                    ShadowDepth="0" 
                                    Color="{StaticResource AccentColor}"
                                    Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Путь для шестиугольника -->
        <PathGeometry x:Key="HexagonGeometry">
            <PathGeometry.Figures>
                <PathFigure StartPoint="50,0">
                    <PathFigure.Segments>
                        <LineSegment Point="100,25"/>
                        <LineSegment Point="100,75"/>
                        <LineSegment Point="50,100"/>
                        <LineSegment Point="0,75"/>
                        <LineSegment Point="0,25"/>
                        <LineSegment Point="50,0"/>
                    </PathFigure.Segments>
                </PathFigure>
            </PathGeometry.Figures>
        </PathGeometry>

        <!-- Стиль для кнопок управления окном -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2337"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Background" Value="#1A2337"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D3047"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Foreground="{TemplateBinding Foreground}"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="ToggleBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter x:Name="ContentSite"
                                                                Content="{Binding Path=SelectionBoxItem, RelativeSource={RelativeSource AncestorType={x:Type ComboBox}}}"
                                                                ContentTemplate="{Binding Path=SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType={x:Type ComboBox}}}"
                                                                ContentTemplateSelector="{Binding Path=ItemTemplateSelector, RelativeSource={RelativeSource AncestorType={x:Type ComboBox}}}"
                                                                Margin="{TemplateBinding Padding}"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"/>
                                                <Path Grid.Column="1"
                                                      x:Name="Arrow"
                                                      Fill="{StaticResource AccentBrush}"
                                                      Data="M0,0 L8,8 L16,0"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ToggleBorder" Property="Background" Value="#202942"/>
                                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        Background="#1A2337"
                                        BorderBrush="#2D3047"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="0,2,0,0">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="20,10"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="Border"
                                        Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#202942"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <!-- Панель заголовка -->
        <Border Height="40" 
                VerticalAlignment="Top" 
                Background="#141B2D"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Grid>
                <TextBlock Text="СОЗДАНИЕ ВОПРОСА - GameSchool"
                         Foreground="{StaticResource TextBrush}"
                         FontSize="16"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Center">
                    <Button Content="—" 
                            Style="{StaticResource WindowControlButton}"
                            Click="MinimizeButton_Click"/>
                    <Button Content="✕" 
                            Style="{StaticResource WindowControlButton}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Декоративные элементы -->
        <Border Style="{StaticResource DecorationBorder}"
                Width="200" Height="200"
                CornerRadius="100"
                Margin="-50,-50,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"/>
        
        <Border Style="{StaticResource DecorationBorder}"
                Width="150" Height="150"
                CornerRadius="75"
                Margin="0,0,-30,-30"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"/>

        <!-- Шестиугольники -->
        <Path Data="{StaticResource HexagonGeometry}"
              Width="100" Height="100"
              Stretch="Uniform"
              StrokeThickness="1"
              Stroke="{StaticResource AccentBrush}"
              Fill="Transparent"
              Opacity="0.2"
              Margin="50,150,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <Path.Effect>
                <DropShadowEffect BlurRadius="15" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"
                                Opacity="0.3"/>
            </Path.Effect>
        </Path>

        <Path Data="{StaticResource HexagonGeometry}"
              Width="150" Height="150"
              Stretch="Uniform"
              StrokeThickness="1"
              Stroke="{StaticResource AccentBrush}"
              Fill="Transparent"
              Opacity="0.15"
              Margin="0,100,80,0"
              HorizontalAlignment="Right"
              VerticalAlignment="Top">
            <Path.Effect>
                <DropShadowEffect BlurRadius="15" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"
                                Opacity="0.3"/>
            </Path.Effect>
        </Path>

        <Path Data="{StaticResource HexagonGeometry}"
              Width="80" Height="80"
              Stretch="Uniform"
              StrokeThickness="1"
              Stroke="{StaticResource AccentBrush}"
              Fill="Transparent"
              Opacity="0.25"
              Margin="150,0,0,100"
              HorizontalAlignment="Left"
              VerticalAlignment="Bottom">
            <Path.Effect>
                <DropShadowEffect BlurRadius="15" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"
                                Opacity="0.3"/>
            </Path.Effect>
        </Path>

        <!-- Дополнительные декоративные линии -->
        <Border Width="1" 
                Height="80"
                Background="{StaticResource AccentGradient}"
                CornerRadius="0.5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="250,0,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"/>
            </Border.Effect>
        </Border>

        <Border Width="80" 
                Height="1"
                Background="{StaticResource AccentGradient}"
                CornerRadius="0.5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,150,200,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"/>
            </Border.Effect>
        </Border>

        <!-- Точки -->
        <Ellipse Width="4" Height="4"
                 Fill="{StaticResource AccentBrush}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="250,0,0,0">
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"/>
            </Ellipse.Effect>
        </Ellipse>

        <Ellipse Width="4" Height="4"
                 Fill="{StaticResource AccentBrush}"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Margin="0,150,200,0">
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Основной контент -->
        <Border Margin="40,60,40,40" 
                Background="{StaticResource SecondaryBrush}" 
                CornerRadius="20"
                BorderThickness="1"
                BorderBrush="{StaticResource BorderBrush}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" 
                                ShadowDepth="10" 
                                Color="#000000" 
                                Opacity="0.5"/>
            </Border.Effect>

            <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

                <!-- Декоративная линия сверху -->
                <Border Height="2" 
                        Background="{StaticResource AccentGradient}"
                        CornerRadius="1"
                        Margin="0,0,0,20"
                        Grid.Row="0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" 
                                        ShadowDepth="0" 
                                        Color="{StaticResource AccentColor}"/>
                    </Border.Effect>
                </Border>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Margin="0,30,0,30">
                    <TextBlock Text="НОВЫЙ ВОПРОС"
                             FontSize="28"
                             FontWeight="Bold"
                             Foreground="{StaticResource TextBrush}"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Система тестирования GameSchool"
                             FontSize="14"
                             Foreground="#4A5568"
                             HorizontalAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Поле вопроса -->
                <TextBox Name="txtQuestionText" 
                         Grid.Row="1" 
                         Height="120"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Декоративный разделитель -->
                <Border Height="1" 
                        Background="{StaticResource BorderBrush}"
                        Margin="50,20"
                        Grid.Row="2"/>

                <!-- Варианты ответов -->
                <TextBlock Text="ВАРИАНТЫ ОТВЕТА"
                         Grid.Row="2"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="{StaticResource TextBrush}"
                         HorizontalAlignment="Center"
                         Margin="0,30"/>

                <TextBox Name="txtOption1" 
                         Grid.Row="3"/>

                <TextBox Name="txtOption2" 
                         Grid.Row="4"/>

                <TextBox Name="txtOption3" 
                         Grid.Row="5"/>

                <TextBox Name="txtOption4" 
                         Grid.Row="6"/>

        <!-- Выбор правильного ответа -->
                <StackPanel Grid.Row="7" Margin="15,20">
                    <TextBlock Text="ПРАВИЛЬНЫЙ ОТВЕТ"
                             FontSize="18"
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextBrush}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,15"/>
                    
                    <ComboBox Name="cmbCorrectAnswer">
            <ComboBoxItem Content="Вариант 1" Tag="0"/>
            <ComboBoxItem Content="Вариант 2" Tag="1"/>
            <ComboBoxItem Content="Вариант 3" Tag="2"/>
            <ComboBoxItem Content="Вариант 4" Tag="3"/>
        </ComboBox>
                </StackPanel>

                <!-- Декоративная линия снизу -->
                <Border Height="2" 
                        Background="{StaticResource AccentGradient}"
                        CornerRadius="1"
                        Margin="0,20,0,20"
                        Grid.Row="8">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" 
                                        ShadowDepth="0" 
                                        Color="{StaticResource AccentColor}"/>
                    </Border.Effect>
                </Border>

        <!-- Кнопка сохранения -->
                <StackPanel Orientation="Horizontal" Grid.Row="8" HorizontalAlignment="Center"
>
                    <Button Content="СОХРАНИТЬ" 
        Height="60"
        Width="250"
        Click="SaveQuestion_Click"/>
                    <Button Content="НАЗАД" 
        Height="60"
        Width="250"
        Click="BackButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Декоративные линии -->
        <Border Width="2" 
                Height="100"
                Background="{StaticResource AccentGradient}"
                CornerRadius="1"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="0,50,100,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"/>
            </Border.Effect>
        </Border>

        <Border Width="2" 
                Height="150"
                Background="{StaticResource AccentGradient}"
                CornerRadius="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="150,0,0,50">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"/>
            </Border.Effect>
        </Border>
    </Grid>
</Window>