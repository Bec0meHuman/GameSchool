<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="GameSchool.Windows_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameSchool.Windows_"
        xmlns:local2="clr-namespace:GameSchool.Converters"
        mc:Ignorable="d"
        Title="Главное меню" 
        Height="700" 
        Width="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Background="#0A0F1F">

    <Window.Resources>
        <!-- Основные цвета -->
        <Color x:Key="PrimaryColor">#0A0F1F</Color>
        <Color x:Key="SecondaryColor">#141B2D</Color>
        <Color x:Key="AccentColor">#00E5FF</Color>
        <Color x:Key="TextColor">#E0E6ED</Color>
        <Color x:Key="BorderColor">#1A2337</Color>

        <!-- Геометрия шестиугольника -->
        <Geometry x:Key="HexagonGeometry">M50,0 L100,25 L100,75 L50,100 L0,75 L0,25 Z</Geometry>

        <!-- Кисти -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

        <!-- Градиенты -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A0F1F" Offset="0"/>
            <GradientStop Color="#141B2D" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00E5FF" Offset="0"/>
            <GradientStop Color="#2979FF" Offset="1"/>
        </LinearGradientBrush>

        <!-- Общие стили -->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="15,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1A2337"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D3047"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter x:Name="contentPresenter"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#202942"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#1A2337"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#1A2337"/>
            <Setter Property="BorderBrush" Value="#2D3047"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton 
                            Name="ToggleButton" 
                            Content="{TemplateBinding SelectionBoxItem}" 
                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Foreground="{TemplateBinding Foreground}"
                            FontSize="{TemplateBinding FontSize}"
                            FontWeight="{TemplateBinding FontWeight}"
                            Padding="{TemplateBinding Padding}"/>
                            <Popup 
                            Name="Popup" 
                            Placement="Bottom" 
                            IsOpen="{TemplateBinding IsDropDownOpen}" 
                            AllowsTransparency="True" 
                            Focusable="False" 
                            PopupAnimation="Slide">
                                <Border 
                                Background="#1A2337" 
                                BorderThickness="1" 
                                BorderBrush="#2D3047">
                                    <ScrollViewer Margin="4" MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#1A2337"/>
            <Setter Property="BorderBrush" Value="#2D3047"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Margin" Value="0,5,0,5"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="#2D3047" 
                                            BorderThickness="1" 
                                            CornerRadius="5">
                                        <ContentPresenter Content="{TemplateBinding Content}" 
                                                        HorizontalAlignment="Stretch"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#202942"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#202942"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <local2:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <!-- Панель заголовка -->
        <Border Height="50" 
                VerticalAlignment="Top" 
                Background="#141B2D"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Grid>
                <TextBlock Text="ГЛАВНОЕ МЕНЮ - GameSchool"
                         Style="{StaticResource TextBlockStyle}"
                         FontSize="16"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Center">
                    <Button Content="—" 
                            Width="45"
                            Height="30"
                            Click="MinimizeButton_Click"/>
                    <Button Content="✕" 
                            Width="45"
                            Height="30"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Border Margin="40,60,40,40" 
                Background="{StaticResource SecondaryBrush}" 
                CornerRadius="20"
                BorderThickness="1"
                BorderBrush="{StaticResource BorderBrush}">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Margin="0,0,0,40">
                    <TextBlock Text="ДОБРО ПОЖАЛОВАТЬ"
                             Style="{StaticResource TextBlockStyle}"
                             FontSize="32"
                             FontWeight="Bold"/>
                    <TextBlock Text="Выберите действие"
                             Style="{StaticResource TextBlockStyle}"
                             FontSize="18"
                             Foreground="#4A5568"
                             Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Кнопки -->
                <Button Content="СОЗДАТЬ ВИКТОРИНУ"
                        Grid.Row="1"
                        Click="AddQuizButton_Click"/>
                <Button Content="НАЧАТЬ ТЕСТ"
                        Grid.Row="2"
                        Click="StartQuizButton_Click"/>
                <Button Content="МАТЕМАТИЧЕСКИЙ ТЕСТ"
                        Grid.Row="3"
                        Click="MathQuizButton_Click"/>
                <Button Content="ВЫЙТИ"
                        Grid.Row="4"
                        Click="LogoutButton_Click"/>
            </Grid>
        </Border>

        <!-- Декоративные элементы -->
        <Border Width="2" 
                Height="100"
                Background="{StaticResource AccentGradient}"
                CornerRadius="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,50,100,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"/>
            </Border.Effect>
        </Border>

        <Border Width="2" 
                Height="150"
                Background="{StaticResource AccentGradient}"
                CornerRadius="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="150,0,0,50">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"/>
            </Border.Effect>
        </Border>

        <!-- Шестиугольники -->
        <Path Data="{StaticResource HexagonGeometry}"
              Width="100" Height="100"
              Stretch="Uniform"
              StrokeThickness="1"
              Stroke="{StaticResource AccentBrush}"
              Fill="Transparent"
              Opacity="0.2"
              Margin="50,150,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <Path.Effect>
                <DropShadowEffect BlurRadius="15" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"
                                Opacity="0.3"/>
            </Path.Effect>
        </Path>

        <Path Data="{StaticResource HexagonGeometry}"
              Width="150" Height="150"
              Stretch="Uniform"
              StrokeThickness="1"
              Stroke="{StaticResource AccentBrush}"
              Fill="Transparent"
              Opacity="0.15"
              Margin="0,100,80,0"
              HorizontalAlignment="Right"
              VerticalAlignment="Top">
            <Path.Effect>
                <DropShadowEffect BlurRadius="15" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"
                                Opacity="0.3"/>
            </Path.Effect>
        </Path>
    </Grid>
</Window>