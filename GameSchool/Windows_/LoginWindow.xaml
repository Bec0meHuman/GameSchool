<Window x:Class="GameSchool.Windows_.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameSchool.Windows_"
        mc:Ignorable="d"
        Title="Вход" 
        Height="565" 
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Background="#0A0F1F">

	<Window.Resources>
		<!-- Основные цвета -->
		<Color x:Key="PrimaryColor">#0A0F1F</Color>
		<Color x:Key="SecondaryColor">#141B2D</Color>
		<Color x:Key="AccentColor">#00E5FF</Color>
		<Color x:Key="TextColor">#E0E6ED</Color>
		<Color x:Key="BorderColor">#1A2337</Color>

		<!-- Геометрия шестиугольника -->
		<Geometry x:Key="HexagonGeometry">M50,0 L100,25 L100,75 L50,100 L0,75 L0,25 Z</Geometry>

		<!-- Кисти -->
		<SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
		<SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
		<SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
		<SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
		<SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

		<!-- Градиенты -->
		<LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#0A0F1F" Offset="0"/>
			<GradientStop Color="#141B2D" Offset="1"/>
		</LinearGradientBrush>

		<LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#00E5FF" Offset="0"/>
			<GradientStop Color="#2979FF" Offset="1"/>
		</LinearGradientBrush>

		<!-- Стиль для TextBox -->
		<Style TargetType="TextBox">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Height" Value="50"/>
			<Setter Property="Margin" Value="15,10"/>
			<Setter Property="Padding" Value="15"/>
			<Setter Property="Background" Value="#1A2337"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="#2D3047"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#202942"/>
					<Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
				</Trigger>
				<Trigger Property="IsFocused" Value="True">
					<Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<!-- Стиль для PasswordBox -->
		<Style TargetType="PasswordBox">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Height" Value="50"/>
			<Setter Property="Margin" Value="15,10"/>
			<Setter Property="Padding" Value="15"/>
			<Setter Property="Background" Value="#1A2337"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="#2D3047"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#202942"/>
					<Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
				</Trigger>
				<Trigger Property="IsFocused" Value="True">
					<Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<!-- Стиль для кнопок -->
		<Style TargetType="Button">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Height" Value="50"/>
			<Setter Property="Margin" Value="15,10"/>
			<Setter Property="Padding" Value="25,0"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="Background" Value="#1A2337"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="#2D3047"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="8">
							<ContentPresenter x:Name="contentPresenter"
											HorizontalAlignment="Center"
											VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#202942"/>
								<Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background" Value="{StaticResource AccentBrush}"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Стиль для TextBlock -->
		<Style TargetType="TextBlock">
			<Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Margin" Value="15,5"/>
		</Style>
	</Window.Resources>

	<Grid Background="{StaticResource BackgroundGradient}">
		<!-- Панель заголовка -->
		<Border Height="50" 
				VerticalAlignment="Top" 
				Background="#141B2D"
				MouseLeftButtonDown="Border_MouseLeftButtonDown">
			<Grid>
				<TextBlock Text="ВХОД - GameSchool"
						 FontSize="16"
						 FontWeight="SemiBold"
						 VerticalAlignment="Center"
						 HorizontalAlignment="Center"/>
				
				<StackPanel Orientation="Horizontal" 
						  HorizontalAlignment="Right" 
						  VerticalAlignment="Center">
					<Button Content="—" 
							Width="45"
							Height="30"
							Click="MinimizeButton_Click"/>
					<Button Content="✕" 
							Width="45"
							Height="30"
							Click="CloseButton_Click"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- Основной контент -->
		<Border Margin="40,60,40,40" 
				Background="{StaticResource SecondaryBrush}" 
				CornerRadius="20"
				BorderThickness="1"
				BorderBrush="{StaticResource BorderBrush}">
			<Grid Margin="30">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

                <StackPanel >
                    <!-- Заголовок -->
                    <TextBlock Text="АВТОРИЗАЦИЯ"
					 
					 FontSize="24"
					 FontWeight="Bold"
					 HorizontalAlignment="Center"
					 />

                    <!-- Поля ввода -->
                    <TextBlock Text="Логин"
				 FontSize="24"
				 FontWeight="Bold"
				 HorizontalAlignment="Center"
				 />
                    <TextBox x:Name="txtLogin"
					 Grid.Row="1"
					 Tag="Логин"/>
                    <TextBlock Text="Пароль"
				 FontSize="24"
				 FontWeight="Bold"
				 HorizontalAlignment="Center"
				 />
                    <PasswordBox x:Name="txtPassword"
						Tag="Пароль"/>

                    <!-- Кнопки -->
                    <Button Content="ВОЙТИ"
					Click="LoginButton_Click"/>

                    <Button Content="РЕГИСТРАЦИЯ"
					Click="RegistrationButton_Click"/>
                </StackPanel>
			</Grid>
		</Border>

		<!-- Декоративные элементы -->
		<Border Width="2" 
				Height="100"
				Background="{StaticResource AccentGradient}"
				CornerRadius="1"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Margin="0,50,100,0">
			<Border.Effect>
				<DropShadowEffect BlurRadius="10" 
								ShadowDepth="0" 
								Color="{StaticResource AccentColor}"/>
			</Border.Effect>
		</Border>

		<Border Width="2" 
				Height="150"
				Background="{StaticResource AccentGradient}"
				CornerRadius="1"
				HorizontalAlignment="Left"
				VerticalAlignment="Bottom"
				Margin="150,0,0,50">
			<Border.Effect>
				<DropShadowEffect BlurRadius="10" 
								ShadowDepth="0" 
								Color="{StaticResource AccentColor}"/>
			</Border.Effect>
		</Border>
	</Grid>
</Window>
