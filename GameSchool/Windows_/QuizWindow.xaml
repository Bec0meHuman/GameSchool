<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="GameSchool.Windows_.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Прохождение викторины" 
        Height="900" 
        Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Background="#0A0F1F">

    <Window.Resources>
        <!-- Основные цвета -->
        <Color x:Key="PrimaryColor">#0A0F1F</Color>
        <Color x:Key="SecondaryColor">#141B2D</Color>
        <Color x:Key="AccentColor">#00E5FF</Color>
        <Color x:Key="TextColor">#E0E6ED</Color>
        <Color x:Key="BorderColor">#1A2337</Color>

        <!-- Кисти -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

        <!-- Градиенты -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A0F1F" Offset="0"/>
            <GradientStop Color="#141B2D" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00E5FF" Offset="0"/>
            <GradientStop Color="#2979FF" Offset="1"/>
        </LinearGradientBrush>

        <!-- Стиль для декоративных элементов -->
        <Style x:Key="DecorationBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" 
                                    ShadowDepth="0" 
                                    Color="{StaticResource AccentColor}"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Background" Value="#1A2337"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D3047"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#202942"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Стиль для кнопки -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,20"/>
            <Setter Property="Margin" Value="15,15"/>
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="MainBorder"
                                    Background="{StaticResource SecondaryBrush}"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    BorderThickness="1.5"
                                    CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" 
                                                    ShadowDepth="5" 
                                                    Color="#000000" 
                                                    Opacity="0.5"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="GlowBorder"
                                    Background="{StaticResource AccentGradient}"
                                    CornerRadius="8"
                                    Opacity="0"/>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0.2" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок управления окном -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2337"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <!-- Панель заголовка -->
        <Border Height="40" 
                VerticalAlignment="Top" 
                Background="#141B2D"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Grid>
                <TextBlock Text="ПРОХОЖДЕНИЕ ВИКТОРИНЫ"
                         FontSize="16"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Center">
                    <Button Content="—" 
                            Style="{StaticResource WindowControlButton}"
                            Click="MinimizeButton_Click"/>
                    <Button Content="✕" 
                            Style="{StaticResource WindowControlButton}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Border Margin="40,60,40,40" 
                Background="{StaticResource SecondaryBrush}" 
                CornerRadius="20"
                BorderThickness="1"
                BorderBrush="{StaticResource BorderBrush}">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Блок с вопросом -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock x:Name="QuestionNumberText"
                             Text="Вопрос 1/10"
                             FontSize="28"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,25"/>
                    
                    <TextBlock x:Name="QuestionText"
                             Text="Текст вопроса будет здесь"
                             FontSize="22"
                             TextWrapping="Wrap"
                             Margin="0,0,0,20"/>
                             
                    <TextBlock x:Name="WarningText"
                             Text=""
                             FontSize="16"
                             Foreground="#FFB300"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"
                             TextAlignment="Center"/>
                </StackPanel>

                <!-- Варианты ответов -->
                <StackPanel Grid.Row="1" x:Name="AnswersPanel" Margin="0,20">
                    <Button Content="Вариант 1" Margin="0,12"/>
                    <Button Content="Вариант 2" Margin="0,12"/>
                    <Button Content="Вариант 3" Margin="0,12"/>
                    <Button Content="Вариант 4" Margin="0,12"/>
                </StackPanel>

                <!-- Навигационные кнопки -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="PreviousButton"
                            Content="НАЗАД"
                            Grid.Column="0"
                            Click="PreviousButton_Click"
                            Margin="0,0,10,0"/>
                    
                    <Button x:Name="NextButton"
                            Content="ДАЛЕЕ"
                            Grid.Column="1"
                            Click="NextButton_Click"
                            Margin="10,0,0,0"
                            IsEnabled="False"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Декоративные элементы -->
        <Border Width="2" 
                Height="100"
                Background="{StaticResource AccentGradient}"
                CornerRadius="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,50,100,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"/>
            </Border.Effect>
        </Border>

        <Border Width="2" 
                Height="150"
                Background="{StaticResource AccentGradient}"
                CornerRadius="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="150,0,0,50">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="0" 
                                Color="{StaticResource AccentColor}"/>
            </Border.Effect>
        </Border>
    </Grid>
</Window>